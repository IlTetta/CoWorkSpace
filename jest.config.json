{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/unit/**/*.test.js"
  ],
  "verbose": true,
  "testTimeout": 15000,
  "silent": false,
  "collectCoverageFrom": [
    "src/backend/services/**/*.js",
    "src/backend/models/**/*.js",
    "src/backend/utils/**/*.js",
    "!src/**/*.test.js",
    "!src/**/index.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 85,
      "lines": 85,
      "statements": 85
    }
  }
}
