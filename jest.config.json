{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js"
  ],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "testTimeout": 30000,
  "silent": false,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/**/index.js"
  ]
}
