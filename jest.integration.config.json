{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup-integration.js"],
  "testMatch": [
    "<rootDir>/tests/integration/**/*.test.js"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/tests/unit/"
  ],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "testTimeout": 30000,
  "silent": false,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/**/index.js"
  ],
  "maxWorkers": 1
}